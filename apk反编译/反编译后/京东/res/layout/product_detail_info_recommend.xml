        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@id/detail_recommend_indicator" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/pd_space_width_8" android:layout_below="@id/detail_recommend_viewpager" android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <View android:layout_marginTop="@dimen/pd_space_width_8" style="@style/pd_divider_style" />
</LinearLayout>