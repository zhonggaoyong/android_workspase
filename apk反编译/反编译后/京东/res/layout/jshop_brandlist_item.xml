<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@drawable/jshop_brand_item_bk" android:layout_width="fill_parent" android:layout_height="@dimen/jshop_brandlist_item_height"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:layout_width="fill_parent" android:layout_height="@dimen/jshop_logoline_height">
        <RelativeLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/jshop_logoline_height">
            <ImageView android:id="@id/brand_logo" android:background="@drawable/jshop_brand_logo_bg" android:padding="1.0px" android:layout_width="@dimen/jshop_logo_width" android:layout_height="@dimen/jshop_logo_height" android:layout_marginLeft="@dimen/jshop_brandlogo_toleft" android:layout_marginTop="@dimen/jshop_brandlogo_totop" android:layout_marginRight="@dimen/jshop_brandlogo_toright_new" android:layout_marginBottom="@dimen/jshop_brandlogo_tobottom" android:src="@drawable/jshop_logo_default" android:scaleType="fitCenter" android:layout_alignParentLeft="true" />
            <LinearLayout android:layout_gravity="center_vertical" android:id="@id/brand_left_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                <TextView android:id="@id/brand_more" android:background="@drawable/jshop_brand_more_btn_selector" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/jshop_brand_more_toleft" android:layout_marginTop="@dimen/jshop_brand_more_totop" android:layout_marginRight="@dimen/jshop_brand_more_toright" />
                <com.facebook.drawee.view.SimpleDraweeView android:id="@id/brand_faved" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/jshop_brand_faved_toleft" android:layout_marginTop="@dimen/jshop_brand_faved_totop" android:layout_marginRight="@dimen/jshop_brand_faved_toright" android:src="@drawable/jshop_faverite_listbutn_ok_normal" />
            </LinearLayout>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/jshop_brand_adlayout_totop" android:layout_toLeftOf="@id/brand_left_view" android:layout_toRightOf="@id/brand_logo">
                <TextView android:textSize="@dimen/jshop_brand_ad_text_size" android:textColor="#ff231815" android:layout_gravity="center_vertical" android:id="@id/brand_ad" android:layout_width="@dimen/jshop_brand_name_width" android:layout_height="wrap_content" android:singleLine="true" />
                <TextView android:textSize="@dimen/jshop_brand_fav_text_size" android:textColor="#ff9fa0a0" android:layout_gravity="center_vertical" android:id="@id/brand_fav" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="猜你喜欢" android:singleLine="true" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout android:layout_gravity="right|center" android:orientation="horizontal" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/jshop_brand_more_layout_toright">
            <LinearLayout android:orientation="horizontal" android:id="@id/jshop_brand_more_layout" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/jshop_brand_more_layout_toright">
                <TextView android:textSize="@dimen/jshop_brand_fav_btn_text_size" android:textColor="#ffffffff" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@id/jshop_brand_fav_btn" android:background="@drawable/jshop_brand_fav_btn_selector" android:paddingLeft="@dimen/jshop_brand_fav_btn_padding_left" android:layout_width="@dimen/jshop_brand_fav_btn_width" android:layout_height="wrap_content" android:text="关注此店" />
                <TextView android:textSize="@dimen/jshop_brand_fav_btn_text_size" android:textColor="#ffffffff" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@id/jshop_brand_block_btn" android:background="@drawable/jshop_brand_block_btn_selector" android:paddingLeft="@dimen/jshop_brand_block_btn_padding_left" android:layout_width="@dimen/jshop_brand_block_btn_width" android:layout_height="wrap_content" android:text="不看此店" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/jshop_brand_item_left" android:layout_marginRight="@dimen/jshop_brand_item_right">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@id/first_img" android:layout_marginLeft="@dimen/jshop_brand_item_first_img_left" style="@style/JshopListItemPic" />
            <ImageView android:id="@id/second_img" android:layout_marginLeft="@dimen/jshop_brand_item_second_img_left" android:layout_marginRight="@dimen/jshop_brand_item_second_img_right" style="@style/JshopListItemPic" />
            <ImageView android:id="@id/third_img" android:layout_marginRight="@dimen/jshop_brand_item_third_img_right" style="@style/JshopListItemPic" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/jshop_brand_item_bottom_top" android:layout_marginBottom="@dimen/jshop_brand_item_bottom_bottom">
            <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@id/jshop_brand_coupon_layout" android:background="@drawable/jshop_brand_coupon_btn_selector" android:paddingLeft="@dimen/jshop_brand_new_layout_pbleft" android:paddingTop="@dimen/jshop_brand_new_layout_ptop" android:paddingRight="@dimen/jshop_brand_new_layout_pright" android:paddingBottom="@dimen/jshop_brand_new_layout_pbottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/jshop_brand_new_layout_left">
                <TextView android:textSize="@dimen/jshop_brand_new_text_size" android:textColor="#ffffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="优惠券" />
                <TextView android:textSize="@dimen/jshop_brand_new_num_size" android:textColor="#ffffffff" android:id="@id/jshop_brand_coupon_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="￥50" />
            </LinearLayout>
            <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@id/jshop_brand_new_layout" android:background="@drawable/jshop_brand_new_btn_selector" android:paddingLeft="@dimen/jshop_brand_new_layout_pbleft" android:paddingTop="@dimen/jshop_brand_new_layout_ptop" android:paddingRight="@dimen/jshop_brand_new_layout_pright" android:paddingBottom="@dimen/jshop_brand_new_layout_pbottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/jshop_brand_coupon_layout_left">
                <TextView android:textSize="@dimen/jshop_brand_new_text_size" android:textColor="#ffffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="上新" />
                <TextView android:textSize="@dimen/jshop_brand_new_num_size" android:textColor="#ffffffff" android:id="@id/jshop_brand_new_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="20+" />
            </LinearLayout>
            <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@id/jshop_brand_promo_layout" android:background="@drawable/jshop_brand_promotion_btn_selector" android:paddingLeft="@dimen/jshop_brand_new_layout_pbleft" android:paddingTop="@dimen/jshop_brand_new_layout_ptop" android:paddingRight="@dimen/jshop_brand_new_layout_pright" android:paddingBottom="@dimen/jshop_brand_new_layout_pbottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/jshop_brand_promo_layout_left">
                <TextView android:textSize="@dimen/jshop_brand_new_text_size" android:textColor="#ffffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="促销" />
                <TextView android:textSize="@dimen/jshop_brand_new_num_size" android:textColor="#ffffffff" android:id="@id/jshop_brand_promo_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="500+" />
            </LinearLayout>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@id/jshop_brand_down_layout" android:paddingTop="@dimen/jshop_brand_down_layout_ptop" android:paddingBottom="@dimen/jshop_brand_down_layout_pbottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/jshop_brand_down_layout_left">
                <TextView android:textSize="@dimen/jshop_brand_down_textsize" android:textColor="#ff252525" android:id="@id/jshop_brand_down_tv1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="满399减50" android:singleLine="true" />
                <TextView android:textSize="@dimen/jshop_brand_down_textsize" android:textColor="#ff252525" android:id="@id/jshop_brand_down_tv2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="满599减100" android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>