<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/home_common_selector" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bn="http://schemas.android.com/apk/res-auto">
    <RelativeLayout android:id="@id/topic_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true">
        <com.baidu.bainuolib.widget.NetworkThumbView android:id="@id/home_topic_imageview" android:layout_width="@dimen/home_topic_icon_height" android:layout_height="@dimen/home_topic_icon_width" android:layout_marginRight="@dimen/home_topic_imageview_margin_right" android:scaleType="fitXY" android:layout_alignParentRight="true" android:layout_centerVertical="true" bn:placeholderEmpty="@drawable/home_placeholder_white" bn:placeholderLoading="@drawable/home_placeholder_white" bn:placeholderError="@drawable/home_placeholder_white" />
        <LinearLayout android:orientation="vertical" android:id="@id/topic_title_layout" android:paddingRight="@dimen/home_topic_sub_title_margin_right" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/home_topic_content_margin_left" android:layout_toLeftOf="@id/home_topic_imageview" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/home_topic_title_font_size" android:textColor="#ff22222d" android:ellipsize="none" android:id="@id/topic_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/default_text" android:singleLine="true" android:includeFontPadding="false" />
            <TextView android:textSize="@dimen/home_topic_sub_title_font_size" android:textColor="#ff55555d" android:ellipsize="none" android:id="@id/topic_sub_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/home_topic_sub_title_margin_top" android:text="@string/default_text" android:singleLine="true" android:includeFontPadding="false" />
        </LinearLayout>
    </RelativeLayout>
    <View android:id="@id/home_topic_right_split" android:background="#ffececec" android:layout_width="@dimen/home_split_line_size" android:layout_height="fill_parent" android:layout_alignParentRight="true" />
    <View android:id="@id/home_topic_bottom_split" android:background="#ffececec" android:layout_width="fill_parent" android:layout_height="@dimen/home_split_line_size" android:layout_alignParentBottom="true" />
</RelativeLayout>