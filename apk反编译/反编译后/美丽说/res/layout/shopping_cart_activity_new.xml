<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:background="@color/grey_l7" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/header" style="@style/mainHeader">
        <com.meilishuo.app.views.CustomTextView android:textColor="@color/grey_d4" android:id="@id/back_btn" android:layout_alignParentLeft="true" android:layout_centerVertical="true" style="@style/TopBackBtn" />
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
            <com.meilishuo.app.views.CustomTextView android:textSize="20.0sp" android:textColor="@color/grey_d4" android:id="@id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/shopcart_title" />
            <com.meilishuo.app.views.CustomTextView android:textSize="20.0sp" android:textColor="@color/grey" android:id="@id/cart_num" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/shopcart_num" />
        </LinearLayout>
    </RelativeLayout>
    <fragment android:id="@id/fragment" android:layout_width="fill_parent" android:layout_height="fill_parent" class="com.meilishuo.app.shoppingcart.fragment.ShoppingCartFragment" />
</LinearLayout>