    <FrameLayout style="@style/title_bar_bg_style">
        <ImageView android:id="@id/btn_back" android:scaleType="centerInside" style="@style/app_title_left_button_style" />
        <TextView android:textSize="@dimen/app_title_size" android:textColor="@color/app_title_dark" android:layout_gravity="center" android:id="@id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" />
