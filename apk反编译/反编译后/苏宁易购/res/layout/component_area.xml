            <Button android:textSize="@dimen/android_public_textsize_13sp" android:textColor="@color/pub_color_nine" android:id="@id/btn_district" android:background="@color/no_transparent_white" android:layout_width="0.0dip" android:layout_height="fill_parent" android:text="@string/district" android:layout_weight="1.0" />
