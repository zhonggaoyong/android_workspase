            <View android:id="@id/line_selected" android:background="@drawable/bg_address_line_selected" android:layout_width="wrap_content" android:layout_height="fill_parent" />
        </LinearLayout>
        <ListView android:orientation="vertical" android:id="@id/item_list" android:fadingEdge="none" android:layout_width="fill_parent" android:layout_height="fill_parent" android:cacheColorHint="@color/hyaline" android:divider="@null" />
    </LinearLayout>
</LinearLayout>